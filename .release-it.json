{
  "github": {
    "release": true
  },
  "npm": {
    "publishPath": "./npm-module"
  },
  "@release-it/conventional-changelog": {
    "preset": {
      "name": "conventionalcommits",
      "types": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {}
      ]
    },
    "infile": "CHANGELOG.md"
  }
}
